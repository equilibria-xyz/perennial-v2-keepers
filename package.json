{
  "name": "perennial-v2-keepers",
  "version": "0.0.0",
  "description": "Perennial V2 Keepers",
  "engines": {
    "node": ">= 20 <21",
    "yarn": "1.x"
  },
  "type": "module",
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/client-preset": "^4.1.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@types/chai": "^4.3.6",
    "@types/express": "^5.0.0",
    "@types/jest": "~29.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "~18",
    "@typescript-eslint/eslint-plugin": "~5.59",
    "@typescript-eslint/parser": "~5.59",
    "chai": "^4.3.8",
    "eslint": "~8.38",
    "eslint-config-prettier": "~8.8",
    "eslint-plugin-jest": "~27.2",
    "hardhat-dependency-compiler": "^1.1.3",
    "husky": "^8.0.3",
    "jest": "~29.5",
    "lint-staged": "^14.0.1",
    "prettier": "~2.8",
    "prettier-plugin-solidity": "^1.3.1",
    "rimraf": "~5.0",
    "ts-api-utils": "~0.0.44",
    "ts-jest": "~29.1",
    "typescript": "5.4.3"
  },
  "scripts": {
    "compile": "OPTIMIZER_ENABLED=true hardhat compile",
    "start": "node build/src/main.js",
    "clean": "rimraf coverage build tmp artifacts cache",
    "prebuild": "yarn run lint",
    "build": "yarn build:release",
    "build:watch": "yarn gen:lens-artifact && yarn gen:gql-typings && tsc -w -p tsconfig.json",
    "build:release": "yarn run clean && yarn gen:lens-artifact && yarn gen:gql-typings && tsc -p tsconfig.release.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "test:integration": "OPTIMIZER_ENABLED=true FORK_ENABLED=true FORK_BLOCK_NUMBER=39329793 hardhat test",
    "prettier": "prettier --config .prettierrc --write .",
    "gen:lens-artifact": "yarn compile && ts-node src/scripts/lensAbiCopy.ts && prettier --write src/constants/abi/*",
    "precommit": "yarn lint-staged",
    "gen:gql-typings": "graphql-codegen --config graph-codegen.ts",
    "postinstall": "husky install"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@account-kit/infra": "^4.0.0-beta.8",
    "@account-kit/smart-contracts": "^4.0.0-beta.8",
    "@equilibria/root": "2.3.0-rc7",
    "@perennial/perennial-v2": "1.3.0-rc0",
    "@perennial/perennial-v2-extensions": "1.3.0-rc0",
    "@perennial/perennial-v2-oracle": "1.3.0-rc0",
    "@perennial/perennial-v2-verifier": "1.3.0-rc0",
    "@perennial/sdk": "0.0.3-alpha.0",
    "@pythnetwork/pyth-evm-js": "^1.20.1",
    "buffer": "^6.0.3",
    "chainlink": "^0.8.2",
    "date-fns": "^2.30.0",
    "dd-trace": "^4.13.1",
    "dotenv": "^16.3.1",
    "express": "^4.21.0",
    "graphql": "^16.8.0",
    "graphql-request": "^6.1.0",
    "hardhat": "^2.17.3",
    "hardhat-deploy": "^0.11.37",
    "solc": "^0.8.21",
    "ts-node": "^10.9.1",
    "tslib": "~2.5",
    "viem": "2.20.0"
  },
  "volta": {
    "node": "18.12.1"
  },
  "resolutions": {
    "@perennial/sdk/**/viem": "2.20.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn prettier --write",
      "yarn eslint --fix"
    ]
  }
}
